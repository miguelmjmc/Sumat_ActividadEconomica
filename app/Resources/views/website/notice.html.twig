<div class="modal-dialog">
    <div class="modal-content">
        <div class="close-modal" data-dismiss="modal">
            <div class="lr">
                <div class="rl"></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="modal-body">
                        <h2 class="text-uppercase">{{ notice.title }}</h2>
                        <p>{{ notice.content|raw }}</p>
                        <img class="img-fluid d-block mx-auto" src="{{ asset(notice.img) }}" alt="{{ notice.title }}">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
