{% extends '@App/adminlte/layout.html.twig' %}

{% block main_title %}Usuarios{% endblock main_title %}

{% block main_breadcrumb %}
    <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> Inicio</a></li>
    <li class="active"><a href="{{ path('user') }}"><i class="fa fa-users"></i> Usuarios</a></li>
{% endblock main_breadcrumb %}

{% block main_container %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-list-ul"></i> Listado de Usuarios</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">

                    {% include '@App/base/date_filter.html.twig' %}

                    <button class="btn btn-primary float-right modal-trigger" data-action="{{ path('user_modal') }}" data-method="POST">Nuevo</button>

                    <table class="table table-striped table-bordered table-hover datatable-filter" style="width:100%" data-src="{{ path('user_list') }}">
                        <thead>
                        <tr>
                            <td>Última actualización</td>
                            <td>Nombre</td>
                            <td>Usuario</td>
                            <td>Email</td>
                            <td>Rol</td>
                            <td>Estado</td>
                            <td>Acciones</td>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock main_container %}
